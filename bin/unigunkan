#!/usr/bin/env ruby
# encoding: UTF-8

input = ARGV[0]

puts "Hello Uni. #{ARGV[0]}"

input = "#{input}/project.pbxproj" if !File.exists?(input) || File::ftype(input) == "directory"

if !File.exists?(input)
  STDERR.puts "Xcode project file not found in #{ARGV[0]}."
  exit
end

f = open(input)
f.each {|line| print line}
f.close